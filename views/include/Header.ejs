<% layout("/layout/boilerplate") -%>

<body>

    
    <div class="Header">
        <div class="Upper-header">
            <div class="tag">
                <h2>Booking.com</h2>
            </div>
            <div id="inr" class="upper-btns">
                INR
            </div>
            <div id="flag" class="upper-btns">
                
                
                <form method="GET" action="/country" title="Language">
                    <label for="flag-btn" style="color: white;font-weight: 700;">Lang: </label>
                    <button type="submit" id="flag-btn" > <%- global.data %></button>
                </form>    
            </div>
            
            <div id="Services" class="upper-btns">
                <i class="fa-solid fa-circle-info"></i>
            </div>
            <div id="list" class="upper-btns">
                List your property
            </div>
            <div class="herder-btns  upper-btns">
                <div class="btn1">
                    <button>Register</button>
                </div>
                <div class="btn1">
                    <button>Sign up</button>
                </div>
            </div>
           
        </div>
        <div class="toggle-btn" >
            <div class="toggle-btn-content"></div>
            <div class="toggle-btn-content"></div>
            <div class="toggle-btn-content"></div>
        </div>
        <div class="Lower-header hide-btn">
            <div class="btns hide-btn">
                <div class="Lower-btn first">
                    <button> <i class="fa-solid fa-bed"></i>  Stays</button>
                </div>
                <div class="Lower-btn">
                    <button > <i class="fa-solid fa-jet-fighter"></i>  Flights</button>
                </div>
                <div class="Lower-btn">
                    <button > <i class="fa-solid fa-business-time"></i>  Flitght+Hotels</button>
                </div>
                <div class="Lower-btn">
                    <button > <i class="fa-solid fa-car"></i>  Car rentals</button>
                </div>
                <div class="Lower-btn">
                    <button> <i class="fa-solid fa-magnet"></i>  Attractions</button>
                </div>

                <div class="Lower-btn">
                    <button> <i class="fa-brands fa-artstation"></i> Airpot Taxi</button>
                </div>
                
            </div>
            
        </div>
        <div class="content-container">
            <h1>Find your next stay</h1>
            <h2>Search low prices on hotels, homes and much more...</h2>

        </div>
        <div class="Qu-btns">
           <div class="btns-container">
            <button> <i class="fa-brands fa-usps"></i> Where are you going?</button>
            <button> <i class="fa-regular fa-calendar-days"></i> Check-in date  check-out date</button>
            
            <button>
                <label for="members"><i class="fa-solid fa-person-circle-question"></i> How many members</label>
                 
                <select id="members">
                    
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="more">more</option>
                </select>
            </button>
            <button id="search-btn">Search</button>
           </div>
        </div>
        <div class="input-check">
            <input type="checkbox" id="check-input">
            <label for="check-input">Show me flights for my travel dates</label>
            
        </div>
        <div class="main-content">
            <h2>Offers</h2>
            <p>Promotions, deals and special offers for you</p>
        </div>

    </div>
    
</body>